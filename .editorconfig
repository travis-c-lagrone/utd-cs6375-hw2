# All files SHOULD have this configuration for portability (unless otherwise specified).
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

# Python MUST have this configuration.
[*.{py,pyx}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

# Python SHOULD have this configuration.
[*.{py,pyx}]
max_line_length = 88  # Default value in the Black formatter.

# INI MUST have this configuration.
[*.{ini,cfg,env,editorconfig,flake8,pydocstyle}]
max_line_length = unset

# TOML MUST have this configuration.
[*.{tml,toml}]
charset = utf-8
max_line_length = unset

# YAML MUST have this configuration.
[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = unset

# YAML SHOULD have this configuration.
[*.{yml,yaml}]
insert_final_newline = true
trim_trailing_whitespace = false  # Don't trim trailing whitespace so as to not conflict with embedded content, e.g. Markdown.

# JSON MAY have this configuration.
[*.{json,jsonc}]
indent_size = 2
max_line_length = unset

# Markdown MUST have this configuration.
[*.{md,markdown}]
insert_final_newline = true
trim_trailing_whitespace = false  # Don't trim trailing whitespace because it can be significant (e.g. https://github.github.com/gfm/#hard-line-breaks)

# Data files MUST have this configuration.
[/data/**]
root = true
charset = unset
indent_size = unset
indent_style = unset
end_of_line = unset
insert_final_newline = unset
max_line_length = off  # "max_line_length" is not supported by all editors.
trim_trailing_whitespace = unset
