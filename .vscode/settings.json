{
  "cSpell.ignoreWords": [
    "cond",
    "def",
    "entrypoints",
    "isort",
    "joblib",
    "mccabe",
    "ndarray",
    "nltk",
    "noqa",
    "preds",
    "probs",
    "punkt",
    "pycodestyle",
    "pydocstyle",
    "pyflakes",
    "pypi",
    "scikit",
    "scipy",
    "sklearn",
    "snowballstemmer",
    "venv",
    "venvs",
    "virtualenv",
    "virtualenvs",
  ],
  "cSpell.words": [
    "multinomial"
  ],
  
  "files.associations": {
    "*.cfg": "ini",
    ".env": "ini",
    ".flake8": "ini",
    "Pipfile": "toml"
  },

  // Disable unused Python components.
  "python.dataScience.enabled":        false,
  "python.jediEnabled":                false,
  "python.linting.banditEnabled":      false,
  "python.linting.mypyEnabled":        false,  // Use the VSCode Pyright extension instead of MyPy.
  "python.linting.prospectorEnabled":  false,
  "python.linting.pycodestyleEnabled": false,
  "python.linting.pylamaEnabled":      false,
  "python.linting.pylintEnabled":      false,
  
  // Enable select Python components.
  "python.formatting.provider": "black",
  "python.linting.enabled":                  true,
  "python.linting.flake8Enabled":            true,
  "python.linting.pydocstyleEnabled":        true,
  "python.workspaceSymbols.enabled":         true,
  "vsintellicode.python.completionsEnabled": true,

  // Locate relevant Python components in the local context.
  "python.envFile":                "${workspaceFolder}/.env",
  "python.linting.pydocstylePath": "${workspaceFolder}/.venv/Scripts/pydocstyle.exe",
  "python.pythonPath":             "${workspaceFolder}/.venv/Scripts/python.exe",

  // Clear any/all confounding arguments that may be otherwise inherited from the global/user VSCode settings.
  "python.formatting.blackArgs":   [],
  "python.linting.flake8Args":     [],
  "python.linting.pydocstyleArgs": [],
}
