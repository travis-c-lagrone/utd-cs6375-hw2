{
  "cSpell.ignoreWords": [
    "cond",
    "def",
    "entrypoints",
    "isort",
    "joblib",
    "mccabe",
    "ndarray",
    "nltk",
    "noqa",
    "preds",
    "probs",
    "punkt",
    "pycodestyle",
    "pydocstyle",
    "pyflakes",
    "scikit",
    "scipy",
    "sklearn",
    "snowballstemmer",
    "venv",
    "venvs",
    "virtualenv",
    "virtualenvs",
  ],
  "cSpell.words": [
    "multinomial"
  ],
  
  "files.associations": {
    "*.cfg": "ini",
    ".env": "ini",
    ".flake8": "ini",
    "Pipfile": "toml"
  },

  // Disable unused Python components.
  "python.dataScience.enabled": false,
  "python.jediEnabled": false,
  "python.linting.banditEnabled": false,
  "python.linting.prospectorEnabled": false,
  "python.linting.pycodestyleEnabled": false,
  "python.linting.pylamaEnabled": false,
  "python.linting.pylintEnabled": false,
  
  // Enable select Python components.
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pydocstyleEnabled": true,
  "python.workspaceSymbols.enabled": true,
  "vsintellicode.python.completionsEnabled": true,

  // Locate relevant Python components in the local context.
  "python.envFile": "${workspaceFolder}/.env",
  "python.linting.pydocstylePath": ".venv/Scripts/pydocstyle.exe",
  "python.pipenvPath": "pipenv",
  "python.pythonPath": ".venv/Scripts/python.exe",

  "python.linting.pydocstyleArgs": []  // Clear any/all confounding arguments that may be otherwise inherited from the global/user VSCode settings.
}
